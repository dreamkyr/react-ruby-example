<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="mt-3 mb-3">
        <div class="media">
          <img class="mr-3 rounded-circle" src="<%= image_url("brandon.jpg")%>" width="72" alt="Brandon Anderson">
          <div class="media-body">
            <span class="font-weight-bold">When did this happen?</span>
            <br>
            Approximate time is fine.
            <br>
            Your ticket may have the time written on it.
          </div>
        </div>
      </div>

      <%= form_with(model: @incident, local: true, url: wizard_path, id: "incident-form") do |form| %>

        <div class="form-group">
          <label>Date</label>
          
          <%= react_component("IncidentDate", { date: @incident.date&.strftime("%m/%d/%Y") }) %>
          <%= form.hidden_field :date_date, required: true, class: "form-control", placeholder: "07/16/2018", "data-parsley-required-message": "Date is required." %>
        </div>

        <div class="form-group">
          <label>Time</label>
          <%= react_component("IncidentTime", { date: @incident.date }) %>
          <%= form.hidden_field :date_time, class: "form-control", placeholder: "3:00 PM" %>
        </div>

        <div class="form-group">
          <div class="progress mt-4 mb-3" style="height: 4px;">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <%= form.submit "Next", class: "btn btn-primary btn-lg text-uppercase btn-block" %>
        </div>
      <% end %>
    </div>  
  </div>
</div>


