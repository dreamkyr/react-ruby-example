<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="mt-3 mb-3">
        <div class="media">
          <img class="mr-3 rounded-circle" src="<%= image_url("brandon.jpg")%>" width="72" alt="Brandon Anderson">
          <div class="media-body">
            <span class="font-weight-bold">Do you remember anything about the officers involved?</span>
          </div>
        </div>
      </div>

      <%= form_with(model: @incident, local: true, url: wizard_path, id: "incident-form", html: {"data-parsley-validate" => ""}) do |form| %>

        <div class="form-group">
          <label>Officer Name</label>
          <%= form.text_field :officer_name, class: "form-control", placeholder: "John Doe" %>
          <div class="form-text small text-muted">If you don't remember, just skip this.</div>
        </div>
        <div class="form-group">
          <label>Badge Number</label>
          <%= form.text_field :officer_badge_number, class: "form-control", placeholder: "322" %>
        </div>

        <div class="form-group">
          <label>Race</label>
          <%= form.select :officer_race, Incident::OFFICER_RACES, {prompt: true, include_blank: false}, class: "form-control"  %>
        </div>

        <div class="form-group">
          <label>Gender</label>
          <%= form.select :officer_gender, Incident::OFFICER_GENDERS, {prompt: true, include_blank: false}, class: "form-control"  %>
        </div>

        <div class="form-group">
          <div class="progress mt-4 mb-3" style="height: 4px;">
            <div class="progress-bar bg-danger" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <%= form.submit "Next", class: "btn btn-primary btn-lg text-uppercase btn-block" %>
        </div>
      <% end %>
    </div>  
  </div>
</div>
